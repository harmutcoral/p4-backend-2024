generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  tasks    Task[]
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  status    String   @default("pending")
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}
